<!--検索フォーム-->
<div class="header-field">
  <div class="search-field">
    <%= form_with(url: search_rooms_path, method: :get) do |form| %>
      <%= form.text_field :keyword, placeholder: "部屋名または詳細を検索", class:"form-control" %>
      <%= form.text_field :area, placeholder: "エリアを検索", class:"form-control" %>
      <%= form.submit "検索" %>
    <% end %>
  </div>
</div>

<!--施設詳細-->
<h1>詳細情報</h1>

<div>
  <%= link_to "←一覧に戻る", :back %>
</div>

<div class="user-profile">
  <div>
    <table>
      <tr class="table-tr">
        <td><%= display_room_avatar(@room, class: 'room-show-img') %></td>
      </tr>
      <tr class="table-tr">
        <th><%= @room.name %></th>
        
      </tr>
      <tr class="table-tr">
        <th><%= @room.introduction %></th>
        
      </tr>
      <tr class="table-tr">
        <th><span>¥</span><%= @room.price %></th>
        
      </tr>
    </table>
  
    <%= render "shared/error", obj: @reservation %>

    <!--予約入力フォーム-->
    <%= form_with(model: @reservation, url: confirm_reservations_path(@room), class: "form-show") do |f| %>
    
      <div>
        <div class="form-resevation">
          <%= f.label :start_day ,"チェックイン日" %><br/>
          <%= f.date_field :start_day, class:"form-control"  %>
        </div>  
        <div class="form-resevation">
          <%= f.label :end_day ,"チェックアウト日" %><br/>
          <%= f.date_field :end_day, class:"form-control" %>
        </div>  
        <div class="form-resevation">
          <%= f.label :people ,"人数" %><br/>
          <%= f.text_field :people, placeholder: "人", class:"form-control" %>
        </div> 
      </div>

      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :room_id, value: @room.id %>

      <div>
        <ul>
          <li><%= f.submit "予約確認画面へ"%></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>